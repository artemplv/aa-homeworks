<h2>
  Sign In
</h2>

<form action="<%= session_url %>" method="POST" class="auth-form">
  <%= auth_token %>

  <label for="user-email-input">Email:</label>  
  <input
    type="text"
    name="user[email]"
    id="user-email-input"
  />

  <label for="user-password-input">Password:</label>
  <input
    type="password"
    name="user[password]"
    id="user-password-input"
  />

  <input
    type="submit"
    value="Sign In"
  />
</form>